root = true

[*.{c, h, rs}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 3
trim_trailing_whitespace = true

[*.json]
charset = utf-8
end_of_line = lf
insert_final_newline = false
indent_style = space
indent_size = 3
trim_trailing_whitespace = true

[*.toml]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 3
trim_trailing_whitespace = true
